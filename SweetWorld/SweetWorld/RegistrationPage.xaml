<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SweetWorld.RegistrationPage" BackgroundImageSource="backgroundCake.png" Visual="Material" >
    <NavigationPage.TitleView>
        <Label Text="Registration" FontSize="Large" Margin="50,0"></Label>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout Padding="30" Spacing="40">
            <StackLayout  Spacing="10">
                <StackLayout>
                    <Entry x:Name="nameEntry" Placeholder="Name"/>
                </StackLayout>
                <StackLayout>
                    <Entry x:Name="loginEntry" Placeholder="Login" Keyboard="Email"/>
                </StackLayout>
                <StackLayout>
                    <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword ="True"/>
                </StackLayout>
                <StackLayout>
                    <Entry x:Name="password2Entry" Placeholder="Confirm password" IsPassword ="True"/>
                </StackLayout>
            </StackLayout>
            <StackLayout VerticalOptions="EndAndExpand">
                <Button Text="Зарегистрироваться" Clicked="btnRegistrClicked" ></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>